    greetings = ["ä½ å¥½", "å“ˆå›‰", "å—¨", "hi", "hello", "æ—©å®‰", "åˆå®‰", "æ™šå®‰", "å†è¦‹", "è¬è¬", "æ„Ÿè¬"]
